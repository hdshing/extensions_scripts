{
    "manifest_version": 2,
    "name": "Desktop Widget",
    "version": "1.0",
    "description": "A desktop widget that stays on top of the desktop.",
    "permissions": ["tabs"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  